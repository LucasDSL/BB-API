{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base", "prettier", "prettier:node"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "linebreak-style": 0,
    "no-console": "off",
    "prettier/prettier": "error",
    "func-names": "off",
    "object-shorthadnd": "off",
    "cass-methods-use-this": "off",
    "single-quote": false
  }
}
